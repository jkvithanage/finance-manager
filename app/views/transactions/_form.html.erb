<%= simple_form_for transaction do |f| %>
  <% if transaction.errors.any? %>
    <div class="error-message alert alert-danger alert-dismissible fade show">
      <%= transaction.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :description %>
  <%= f.input :transaction_type, collection: Transaction.transaction_types, as: :radio_buttons, item_wrapper_class: 'form-check-inline' %>
  <%= f.input :amount %>
  <%= f.association :account, collection: current_user.accounts, label_method: :name, value_method: :id, prompt: "Choose account" %>
  <%= f.association :category, collection: current_user.categories, prompt: "Choose category" %>
  <%= f.input :notes %>
  <%= f.button :submit, class: "mt-3 btn btn-primary w-100" %>
<% end %>
