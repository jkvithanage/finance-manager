<main class="container">
  <div class="page-header">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="page-title">
          Transactions
        </h2>
      </div>
      <div class="col-auto ms-auto">
        <div class="btn-list">
          <%= link_to "New transaction", new_transaction_path, data: { turbo_frame: 'modal' }, class: 'btn btn-primary' %>
          <%= link_to "Import transactions", read_transactions_path, data: { turbo_frame: 'modal' }, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
  <table class="table table-responsive">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Description</th>
        <th scope="col">Type</th>
        <th scope="col">Amount</th>
        <th scope="col">Category</th>
        <th scope="col">Account</th>
        <th scope="col">Notes</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @transactions %>
    </tbody>
  </table>
</main>
