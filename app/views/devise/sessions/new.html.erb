<div class="sessions">
  <div class="form-signin w-100 mx-auto">
    <div class="text-center">
      <h3>Sign in to your account</h3>
      <p class="text-muted">
        Need an account?
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        <% end %>
      </p>
    </div>
    <%= render 'form' %>
  </div>
</div>
