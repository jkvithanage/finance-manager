<div class="page-wrapper page-center">
  <div class="container container-login">
    <div class="card card-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6 d-flex flex-column pe-4 text-center">
            <h1 class="text-primary">Welcome back!</h1>
            <p class="text-secondary">Let's analyse your financial status.</p>
            <%= image_tag 'finance', class: 'mt-5' %>
          </div>
          <div class="col-md-6 border-start ps-4">
            <div class="text-center">
              <h3>Sign in to your account</h3>
              <p class="text-muted">
                Need an account?
                <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Sign up", new_registration_path(resource_name) %>
                <% end %>
              </p>
            </div>
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
