<%= simple_form_for account do |f| %>
  <% if account.errors.any? %>
    <div class="error-message">
      <%= account.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <%= f.input :acc_name %>
  <%= f.input :acc_type, collection: ['Checking', 'Savings'] %>
  <%= f.input :bank_name, collection: ['Westpac'] %>
  <%= f.input :acc_number %>
  <%= f.input :owner_name %>
  <%= f.input :current_balance %>
  <%= f.button :submit, class: "mt-3 btn btn-primary" %>
<% end %>
