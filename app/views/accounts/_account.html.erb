<div class="col-4 d-flex">
  <div class="card p-2 justify-content-center align-items-center flex-fill">
    <div class="d-flex justify-content-between align-items-center w-100">
      <p class="m-0"><%= account.name %></p>
      <div class="d-flex align-self-end">
        <%= link_to edit_account_path(account), data: { turbo_frame: 'modal' } do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= link_to account_path(account), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'text-danger' do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    </div>
    <h5><%= account.owner_name %></h5>
    <p><%= account.account_type %></p>
    <p><%= account.bank_name %> (<%= account.account_number %>)</p>
    <p><%= account.current_balance %></p>
  </div>
</div>
